<?xml version="1.0" encoding="utf-8"?>
<odoo>



    <template id="report_saleorder_document_custom_lupeon" inherit_id="sale.report_saleorder_document">

        <!-- Aquí va la direción -->
        <xpath expr="//t[@t-set='address']" position="replace"/>
        <xpath expr="//t[@t-set='information_block']" position="replace"/>


        <xpath expr="//h2" position="before">
        	<div class="row">
                <t t-set="ia" t-value="doc.partner_invoice_id"/>
                <t t-set="sa" t-value="doc.partner_shipping_id"/>

                <div class="col-6">
                    <strong>Invoice Address:</strong>
                    <hr style="width:50%; margin:1px;"/>
                    <div>
                        <span itemprop="name" t-esc="ia.name"/>
                    </div>
                    <div>
                        <span t-esc="ia.street"/>
                    </div>
                    <div>
                        <span t-esc="ia.zip"/> 
                        <span t-esc="ia.city"/> 
                        <t t-if="ia.state_id.name">
                            (  <span t-esc="sa.state_id.name"/>  )
                        </t>
                    </div>
                    <div t-if="ia.vat">
                        CIF: <span t-esc="ia.vat"/>
                    </div>
                </div>
                <div class="col-6">
                    <strong>Shipping Adress:</strong>
                    <hr style="width:50%; margin:1px;"/>
                    <div>
                        <span itemprop="name" t-esc="sa.name"/>
                    </div>
                    <div>
                        <span t-esc="sa.street"/>
                    </div>
                    <div>
                        <span t-esc="sa.zip"/> 
                        <span t-esc="sa.city"/>
                        <t t-if="sa.state_id.name">
                            (  <span t-esc="sa.state_id.name"/>  )
                        </t>
                    </div>
                    <div t-if="sa.vat">
                        CIF: <span t-esc="sa.vat"/>
                    </div>
                </div>
        	</div>
            <div class="row">
                <br/>
            </div>
      	</xpath>

        <!-- Quitar los # y que salga PROFORMA -->
        <xpath expr="//h2" position="replace">
             <h2>
                <t t-if="not (env.context.get('proforma', False) or is_pro_forma)">
                    <span t-if="doc.state not in ['draft','sent']">Order </span>
                    <span t-if="doc.state in ['draft','sent']">Quotation </span>
                </t>
                <t t-if="env.context.get('proforma', False) or is_pro_forma">
                    <span>Proforma</span>
                </t>
                <span t-field="doc.name"/>
            </h2>
        </xpath>

      	<xpath expr="//div[@id='informations']" position="replace">
            <div class="row mt32 mb32" id="informations">
                <div t-if="doc.name" class="col-auto mw-100 mb-2">
                    <strong>Number:</strong>
                    <p class="m-0" t-field="doc.name"/>
                </div>
                <div t-if="doc.confirmation_date and doc.state not in ['draft','sent']" class="col-auto mw-100 mb-2">
                    <strong>Order Date:</strong>
                    <p class="m-0" t-field="doc.confirmation_date"/>
                </div>
                <div t-if="doc.date_order and doc.state in ['draft','sent']" class="col-auto mw-100 mb-2">
                    <strong>Quotation Date:</strong>
                    <p class="m-0" t-field="doc.date_order"/>
                </div>
                <div t-if="doc.client_order_ref" class="col-auto mw-100 mb-2">
                    <strong>Nº Customer Order:</strong>
                    <p class="m-0" t-field="doc.client_order_ref"/>
                </div>
                <div t-if="doc.partner_id and doc.partner_id.supplier_number" class="col-auto mw-100 mb-2">
                    <strong>Nº Supplier:</strong>
                    <p class="m-0" t-field="doc.partner_id.supplier_number"/>
                </div>
                <div t-if="doc.num_line" class="col-auto mw-100 mb-2">
                    <strong>Nº Line:</strong>
                    <p class="m-0" t-field="doc.num_line"/>
                </div>
                <div t-if="doc.validity_date and env.context.get('proforma', False) or is_pro_forma" class="col-auto mw-100 mb-2">
                    <strong>Expiration Date:</strong>
                    <p class="m-0" t-field="doc.validity_date"/>
                </div>
            </div>
      	</xpath>
        
        <!-- Cantidad sin decimales -->
        <xpath expr="//table[@class='table table-sm o_main_table']/tbody/t[@t-foreach='doc.order_line']/tr/t[1]/td[2]"
               position="replace">
                 <td class="text-right">
                    <span t-esc="int(line.product_uom_qty)"/>
                    <!-- <span t-field="line.product_uom" groups="uom.group_uom"/> -->
                </td>
        </xpath>
        <!-- Mostrar nombre bien en el impuesto -->
        <xpath expr="//table[@class='table table-sm o_main_table']/tbody/t[@t-foreach='doc.order_line']/tr/t[1]/td[5]"
               position="replace">
                <td class="text-right">
                    <span t-esc="', '.join(map(lambda x: (x.name), line.tax_id))"/>
                </td>
        </xpath>

        <!-- Etiqueta plazo de pago -->
        <xpath expr="//p[@t-if='doc.payment_term_id.note']" position="replace">
            <p t-if="doc.payment_term_id.note" name="payment_term">
                <strong>Payment Term:</strong>
                <span t-field="doc.payment_term_id.note"/>
                <span t-field="doc.payment_term_id.note"/>
            </p>
        </xpath>

        <!--    MODIFICACIONES INFORME LUPEÓN -->


         <xpath expr="//table[@class='table table-sm o_main_table']/thead/tr/th[1]" position="before">
                <t t-if="lupeon_report">
                     <th class="text-left">Model</th>
                     <th class="text-left">Reference</th>
                     <!-- <th class="text-left">Technology</th>
                     <th class="text-left">Material</th>
                     <th class="text-left">Finish</th> -->
                </t>
        </xpath>
      
         <xpath expr="//table[@class='table table-sm o_main_table']/tbody/t[@t-foreach='doc.order_line']/tr/t[1]/td[1]" position="before">
                <t t-if="lupeon_report">
                    <td>
                        <img t-att-src="'data:image/png;base64,%s' % to_text(line.model_image)" style="max-height: 50px;"/>
                    </td>
                    <td>
                         <span t-field="line.ref"/>
                    </td>
                    <!-- <td>
                         <span t-field="line.report_material"/>
                    </td>
                    <td>
                         <span t-field="line.report_finish"/>
                    </td> -->
                </t>
        </xpath>
         <xpath expr="//table[@class='table table-sm o_main_table']/tbody/t[@t-foreach='doc.order_line']/tr" position="after">
                <t t-if="lupeon_report">
                    <tr>
                        <td colspan="2" style="border:none;">
                            Technologia: <span t-field="line.report_tech"/>
                        </td>
                        <td colspan="2" style="border:none;">
                            Material: <span t-field="line.report_material"/>
                        </td>
                        <td colspan="2" style="border:none;">
                            Finish: <span t-field="line.report_finish"/>
                        </td>
                        <td style="border:none;">
                    
                        </td>
                    </tr>
                </t>
        </xpath>
  	</template>

    
     <template id="report_saleorder_lupeon">
        <t t-call="web.html_container">
            <t t-set="lupeon_report" t-value="True"/>
            <t t-foreach="docs" t-as="doc">
                <t t-call="sale.report_saleorder_document" t-lang="doc.partner_id.lang"/>
            </t>
        </t>
    </template>

</odoo>


