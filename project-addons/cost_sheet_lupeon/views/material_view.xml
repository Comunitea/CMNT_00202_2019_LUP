<?xml version="1.0"?>
<odoo>

   
    <record id="material_view_form" model="ir.ui.view">
        <field name="name">material.view</field>
        <field name="model">material</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="type"/>
                    </group>
                    <group attrs="{'invisible': [('type', '!=', 'fdm')]}">
                        <field name="gr_cc"/>
                        <field name="euro_kg"/>
                        <field name="factor_hour"/>
                    </group>
                    <group attrs="{'invisible': [('type', '!=', 'sls')]}">
                        <field name="dens_cc"/>
                        <field name="dens_bulk"/>
                        <field name="vel_cc"/>
                        <field name="vel_z"/>
                        <field name="euro_kg_bucket"/>
                        <field name="euro_hour_maq"/>
                    </group>
                    <group attrs="{'invisible': [('type', '!=', 'poly')]}">
                        <field name="euro_kg"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="material_view_tree" model="ir.ui.view">
        <field name="name">material.view</field>
        <field name="model">material</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="type"/>
                <field name="gr_cc"/>
                <field name="euro_kg"/>
                <field name="factor_hour"/>
            </tree>
        </field>
    </record>

    <record id="action_materials" model="ir.actions.act_window">
        <field name="name">Materials</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">material</field>
        <field name="view_type">form</field>
        <field name="view_mode">tree,form</field>
    </record>


    <menuitem id="menu_action_materials" action="action_materials"  name="Materials" parent="menu_cost_cfg" sequence="10"/>

</odoo>