<?xml version="1.0"?>
<odoo>

    <record id="cost_sheet_view" model="ir.ui.view" >
        <field name="name">cost.sheet.view</field>
        <field name="model">cost.sheet</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="name"/>
                    </group>
                    <group string="General">
                        <field name="init_cost"/>
                        <field name="admin_fact"/>
                        <field name="disc_qty"/>
                        <field name="disc2"/>
                        <field name="increment"/>
                        <field name="inspection_type"/>
                    </group>
                    <group string="Design">
                        <field name="design_ref"/>
                        <field name="flat_ref"/>
                        <field name="legislation"/>
                        <field name="description"/>
                        <field name="customer_note"/>
                        <field name="time_line_ids"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

</odoo>