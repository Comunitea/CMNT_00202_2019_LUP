<?xml version="1.0" encoding="utf-8"?>
<odoo><data>
    <record id="view_find_product_line_form" model="ir.ui.view">
        <field name="name">find.product.line.form</field>
        <field name="model">find.product.line</field>
        <field name="arch" type="xml">
            <form>
                <group>
                    <field name="scanned_product"/>
                    <field name="product_id" readonly="1" force_save="1"/>
                </group>
                <footer>
                        <button string="Find" class="btn-primary find_line"/>
                        <button string="Cancel" class="btn-secondary" special="cancel" />
                </footer>
            </form>
        </field>
    </record>
</data></odoo>
