<?xml version="1.0" encoding="utf-8" ?>
<odoo>
        <record id="mrp_production_move_wzd_form_view" model="ir.ui.view">
            <field name="name">mrp.production.move.wzd.form</field>
            <field name="model">mrp.production.move.wzd</field>
            <field name="type">form</field>
            <field name="arch" type="xml">
                <form string="Confirm product info">
                    <group>
                        <field name="raw_material_production_id" readonly="True" />
                        <field name="product_id" readonly="True" />
                        <field name="location_id" readonly="True" />
                        <field name="location_dest_id" readonly="True" />
                        <field name="product_uom_qty" />
                        <field name="product_uom" />
                    </group>
                    <footer>
                        <button
                        name="confirm"
                        string="confirm"
                        type="object"
                        class="oe_highlight"
                    />
                        or
                        <button string="Cancel" class="oe_link" special="cancel" />
                    </footer>
                </form>
            </field>
        </record>

        <record id="act_mrp_product_produce" model="ir.actions.act_window">
            <field name="name">Production add move</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">mrp.production.move.wzd</field>
            <field name="view_type">form</field>
            <field name="view_mode">form</field>
            <field name="context">{}</field>
            <field name="target">new</field>
        </record>
</odoo>
