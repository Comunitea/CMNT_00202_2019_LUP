<?xml version="1.0"?>
<odoo>

     <record id="view_move_form_custom" model="ir.ui.view" >
        <field name="name">view_move_form_custom</field>
        <field name="model">stock.picking</field>
        <field name="inherit_id" ref="stock.view_picking_form"/>
        <field name="arch" type="xml">
            <button name="action_cancel" position="replace">
                <button name="%(action_question_cancel_wizard)d" type="action" attrs="{'invisible': ['|', ('state', 'not in', ('assigned', 'confirmed', 'partially_available', 'draft', 'waiting')), ('is_locked', '=', False)]}" string="Cancel" groups="base.group_user"/>

            </button>    
        </field>
    </record>

   

</odoo>
